{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions" : {
      "sourceType" : "module",
      "ecmaFeatures": {
        "jsx" : true
      }
    },
    "plugins" : [
      "react"
    ],
    "extends": "standard",
    "rules": {
        "indent": 2,
        "linebreak-style": 0,
        "space-before-function-paren" : 0,
        "jsx-quotes": [
          2,
          "prefer-double"
        ],
        "quotes": [
          2,
          "single"
        ],
        "semi": [
          2,
          "always"
        ],
        "react/jsx-uses-vars": 2
    }
}
